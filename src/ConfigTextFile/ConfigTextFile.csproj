<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Company />
    <Product>ConfigTextFile</Product>
    <Authors>Michael McBride</Authors>
    <RepositoryUrl>https://github.com/Michmcb/ConfigTextFile</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>config configuration text fluent</PackageTags>
    <PackageProjectUrl>https://github.com/Michmcb/ConfigTextFile</PackageProjectUrl>
    <Description>A .NET library which allows you to read and write plain-text minimal syntax configuration files</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReleaseNotes>- Value property doesn't throw exceptions anymore, it is back to returning string.Empty

- Added ability to ignore comments when loading files</PackageReleaseNotes>
    <PackageIcon>icon.png</PackageIcon>
    <Version>1.7.1</Version>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <AssemblyVersion>1.7.1.0</AssemblyVersion>
    <FileVersion>1.7.1.0</FileVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>


  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
