<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net5.0;netstandard2.1;netstandard2.0</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Company />
    <Product>ConfigTextFile</Product>
    <Authors>Michael McBride</Authors>
    <RepositoryUrl>https://github.com/Michmcb/ConfigTextFile</RepositoryUrl>
    <RepositoryType>Github</RepositoryType>
    <PackageTags>config configuration text fluent</PackageTags>
    <PackageProjectUrl>https://github.com/Michmcb/ConfigTextFile</PackageProjectUrl>
    <Description>A .NET library which allows you to read and write plain-text minimal syntax configuration files</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageReleaseNotes>- Fixed a bug which disallowed writing an empty section
- Fixed a bug which erroneously allowed you to finish a file after writing the end of an array regardless of the section nesting level</PackageReleaseNotes>
    <PackageIcon>icon.png</PackageIcon>
    <Version>1.8.2</Version>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <AssemblyVersion>1.8.2.0</AssemblyVersion>
    <FileVersion>1.8.2.0</FileVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>


  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
